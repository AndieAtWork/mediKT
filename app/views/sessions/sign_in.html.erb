<%= stylesheet_link_tag 'init_styles' %>

<div class="normal-background">
  <div>
    <%= image_tag '/assets/Pill2.png', class: 'title-image' %>
  </div>
  <div class="introduction">
    <div class="introduction-title">
      Welcome to MediKT
    </div>
    <div>
      <div>Best web application to manage your treatments and health needs</div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-1 col-lg-2 col-md-2">
    </div>
    <div class="col-sm-10 col-lg-8 col-md-8">
      <div class="row square">
        <div class="col-lg-12 col-md-12">
          <div id="title">
            Login
          </div>
          <div style="margin-top:15px;">
            <%= form_with url: "/sessions/create_session", id: "create_session_form", method: :session do |form| %>
              <div class="row">
                <div>  
                  <%= form.label :username, class: "session-input-field" %>
                </div>
                <div> 
                  <%= form.text_field :username, required: true, class: "session-input" %><div class="icon-holder user-holder"><i class="fa fa-user"></i></div>
                  <div class="valid-feedback"></div>
                  <div class="invalid-feedback">Enter a username.</div>
                </div>
              </div>
              <div class="row">
                <div> 
                  <%= form.label :password, class: "session-input-field" %>
                </div>
                <div> 
                  <%= form.password_field :password, class: "session-input" %><div class="icon-holder key-holder"><i class="fa fa-key"></i></div>
                  <div class="valid-feedback"></div>
                  <div class="invalid-feedback">Enter a password.</div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <%= form.submit "Sign In", class: "form-button enter-button" %>
                </div>
              </div>
            <% end %>
          </div>

          <div style="margin-top: 20px;margin-bottom: -10px;">
            Don't have an account yet?
          </div>
          
          <div>
            <button type="button" class="form-button crear-button" onclick="location.href='./create_account'">Sign Up</button>
          </div>

          <div class="bottom-image-container">
            <%= image_tag '/assets/medicines-transparent-session.png', class: "bottom-image" %>
          </div>

          <div class="session-quote-container">
            <div class="session-quote">
              <p class="fst-italic">"Medication is not just about treating diseases; it is about empowering individuals to regain control over their health and reclaim their lives."</p>
            </div>
          </div>
          <div>
            <div class="session-quote"> 
              <p>- Dr. Siddhartha Mukherjee</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="bottom-segment">
    <div class="credits">
      Application made by Andie PÃ©rez
    </div>
  </div>
</div>


<%= javascript_include_tag 'custom_validator' %>
<%= javascript_include_tag 'signing_in' %>